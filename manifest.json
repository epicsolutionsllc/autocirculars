{
  "name": "AutoCirculars",
  "description": "Automagically fill fields in Epic Admin Circulars",
  "version": "1.0",
  "manifest_version": 3,
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png",
    "512": "icons/icon512.png",
    "1024": "icons/icon1024.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["storage"],
  "action": {
    "default_popup": "popup.html"
  },
  "host_permissions": ["https://admin.grocerytech.solutions/*"],
  "content_scripts": [
    {
      "js": ["foreground.js"],
      "css": ["foreground.css"],
      "matches": ["https://admin.grocerytech.solutions/*"]
    }
  ]
}
